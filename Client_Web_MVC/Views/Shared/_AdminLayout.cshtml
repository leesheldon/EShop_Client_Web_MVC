<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title - Admin</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
        
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.0/sweetalert.min.js"></script>
    <link href="~/Content/sweetalert/sweet-alert.css" rel="stylesheet" />*@

    @* Cho phép view chèn nội dung (nếu có) *@
    @RenderSection("Styles", false)
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "AdminProducts")">Quản trị</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="@ViewBag.TrangChuAct">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li class="@ViewBag.BrandsAct">
                        @Html.ActionLink("Brands", "Index", "Brands")
                    </li>                    
                    <li class="@ViewBag.ProductsAct">
                        @Html.ActionLink("Products", "Index", "AdminProducts")
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")                
            </div>
        </div>
    </nav>

    <div class="container-fluid" style="margin-top: 50px;">
        <div class="row">
            <div class="col-sm-2 hidden-xs" style="min-height: 600px; background-color: #ff6a00">
                @* Tích hợp partial view vào *@
               @* @Html.Action("NewProductsList", "AdminProducts", new { n = 3 })*@

                @* Cho phép view chèn nội dung (nếu có) *@
                @RenderSection("SideBarLeft", false)
            </div>
            <div class="col-sm-10">
                @* Nội dung thiết kế chính của từng view *@
                @RenderBody()
            </div>
        </div>        
    </div>
    <footer class="container-fluid" style="color: white; background-color: #423e3e">
        &copy; @DateTime.Today.Year - Siêu thị điện máy ABC
    </footer>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @* Cho phép view chèn nội dung (nếu có) *@
    @RenderSection("Scripts", false)
</body>
</html>
